generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  username     String
  gmail        String       @unique
  GGBs_id      String       @unique @default("none")
  Gingerbreads Gingerbreads @relation(fields: [GGBs_id], references: [id])
  createdAt    DateTime     @default(now())
}

model Gingerbreads {
  id             String @id @default(uuid())
  User           User?
  GGB_type       String @default("normal")
  thanks_message String @default("")
  GGB_1_id       String @default("none")
  GGB_2_id       String @default("none")
  GGB_3_id       String @default("none")
}

model Gingerbread {
  id             String @id @default(uuid())
  head1_id       Int    @default(0)
  left1_hand_id  Int    @default(0)
  right1_hand_id Int    @default(0)
  head2_id       Int    @default(0)
  left2_hand_id  Int    @default(0)
  right2_hand_id Int    @default(0)
  head3_id       Int    @default(0)
  left3_hand_id  Int    @default(0)
  right3_hand_id Int    @default(0)
}

model Item {
  id               Int    @id @default(autoincrement())
  item_name        String @default("")
  item_model       String @default("")
  item_description String @default("")
  item_position    String @default("")
  x_position       Float  @default(0)
  y_position       Float  @default(0)
  z_position       Float  @default(0)
  x_rotation       Float  @default(0)
  y_rotation       Float  @default(0)
  z_rotation       Float  @default(0)
  scale            Float  @default(0)
}

model ItemData {
  id       String  @id @default(uuid())
  itemId   Int     @default(0)
  senderId String  @default("")
  message  String?
}
