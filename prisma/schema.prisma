generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(uuid())
  link_id      String?      @default(uuid()) @db.VarChar(10)
  username     String
  gmail        String       @unique
  GGBs_id      String       @unique @default("none")
  Gingerbreads Gingerbreads @relation(fields: [GGBs_id], references: [id])
  createdAt    DateTime     @default(now())
  Account      Account[]
}

model Gingerbreads {
  id             String  @id @default(uuid())
  link_id        String? @default(uuid()) @db.VarChar(10)
  User           User?
  GGB_type       String  @default("normal")
  thanks_message String  @default("")
  GGB_1_id       String  @default("none")
  GGB_2_id       String  @default("none")
  GGB_3_id       String  @default("none")
  senders        String  @default("")
}

model Gingerbread {
  id             String @id @default(uuid())
  head1_id       String @default("")
  left1_hand_id  String @default("")
  right1_hand_id String @default("")
  head2_id       String @default("")
  left2_hand_id  String @default("")
  right2_hand_id String @default("")
  head3_id       String @default("")
  left3_hand_id  String @default("")
  right3_hand_id String @default("")
}

model Item {
  id               Int    @id @default(autoincrement())
  item_name        String @default("")
  item_model       String @default("")
  item_description String @default("")
  item_position    String @default("")
  x_position       Float  @default(0)
  y_position       Float  @default(0)
  z_position       Float  @default(0)
  x_rotation       Float  @default(0)
  y_rotation       Float  @default(0)
  z_rotation       Float  @default(0)
  scale            Float  @default(0)
}

model ItemData {
  id       String  @id @default(uuid())
  itemId   Int     @default(0)
  senderId String  @default("")
  message  String?
}

// MUST HAVE : when use social media login like google
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}
